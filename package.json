{
	"name": "bxt-2.0",
	"version": "1.0.0",
	"description": "Updated Version of the BXT Bot",
	"main": "index.js",
	"scripts": {
		"test": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
		"lint": "prettier --write .",
		"build": "tsc",
		"start": "node ./dist/src/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Xmde/BXT-2.0.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Xmde/BXT-2.0/issues"
	},
	"homepage": "https://github.com/Xmde/BXT-2.0#readme",
	"packageManager": "yarn@3.1.0",
	"devDependencies": {
		"@commitlint/cli": "^14.1.0",
		"@commitlint/config-angular": "^14.1.0",
		"@types/glob": "^7",
		"@types/libsodium-wrappers": "^0",
		"@types/node": "^16.11.7",
		"@types/xml2js": "^0",
		"@types/yt-search": "^2",
		"husky": "^7.0.4",
		"lint-staged": "^11.2.6",
		"prettier": "^2.4.1",
		"ts-node": "^10.4.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.4.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn dlx @yarnpkg/doctor && lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.ts": "prettier --write",
		"*.js": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				"pascal-case"
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test"
				]
			]
		}
	},
	"dependencies": {
		"@discordjs/builders": "^0.8.2",
		"@discordjs/opus": "^0.7.0",
		"@discordjs/rest": "^0.1.0-canary.0",
		"@discordjs/voice": "^0.7.5",
		"consola": "^2.15.3",
		"discord-api-types": "^0.24.0",
		"discord.js": "^13.3.1",
		"glob": "^7.2.0",
		"googleapis": "^91.0.0",
		"libsodium-wrappers": "^0.7.9",
		"mongoose": "^6.0.12",
		"node-twitch": "^0.4.5",
		"pubsubhubbub": "^1.0.1",
		"xml2js": "^0.4.23",
		"yt-search": "^2.10.2",
		"ytdl-core": "^4.9.1"
	}
}
